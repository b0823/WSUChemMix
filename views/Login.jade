extends layout

block content
	body

	div(class='container')
		div(class='jumbotron')
			center
				h1= "Login"
			div
				center
					form(action='/login', method='post')
						div
							label Username:
							input(type='text', name='username')
							br
						div
							label Password:
							input(type='password', name='password')
							br
							br
						div
							input(type='submit', value='Submit')